<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_weight="0.6"-->
<!--        android:minHeight="100dp">-->

<!--        <TextView-->
<!--            android:textSize="30sp"-->
<!--            android:layout_marginLeft="32dp"-->
